{
  "name": "flashot",
  "workspaces": {
    "packages": [
      "package",
      "cli"
    ],
    "catalog": {
      "@types/bun": "^1.2.21"
    }
  },
  "bin": {
    "flashot": "./cli/src/index.ts"
  },
  "flashot": "link:flashot",
  "scripts": {
    "lint": "eslint --config .config/eslint.config.ts .",
    "lint:fix": "eslint --config .config/eslint.config.ts . --fix",
    "biome:lint": "biome lint --write .",
    "biome:format": "biome format --write .",
    "biome": "biome check .",
    "biome:fix": "biome check --write .",
    "check": "bun run lint && bun run biome",
    "check:fix": "bun run lint:fix && bun run biome:fix && bun run biome:lint && bun run biome:format",
    "prepare": "bun lefthook run pre-commit && bun lefthook run pre-push",
    "deps": "cd web && bun install",
    "app:dev": "tauri dev",
    "app:build": "tauri build",
    "app:build:debug": "tauri build --debug",
    "web:dev": "cd web && bun run dev",
    "web:build": "cd web && bun run build",
    "web:start": "cd web && bun run start"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@eslint/js": "^9.35.0",
    "eslint": "^9.35.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^16.3.0",
    "lefthook": "^1.12.4",
    "typescript-eslint": "^8.46.0",
    "@tauri-apps/cli": "^2.9.6"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-fs": "^2.4.4",
    "@tauri-apps/plugin-notification": "^2.3.3",
    "@tauri-apps/plugin-os": "^2.3.2",
    "@tauri-apps/plugin-shell": "^2.3.3",
    "@tauri-apps/plugin-store": "^2.4.1"
  }
}
